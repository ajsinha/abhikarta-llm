          {"step": 3, "role": "cmo", "action": "communications_plan"},
          {"step": 4, "role": "cfo", "action": "financial_impact"},
          {"step": 5, "role": "chro", "action": "employee_communication"},
          {"step": 6, "role": "ceo", "action": "coordinate_response"}
        ]
      }
