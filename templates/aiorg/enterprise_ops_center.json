        ]
      },
      {
        "workflow_id": "quarterly_planning",
        "name": "Quarterly Planning",
        "trigger": "quarter_start",
        "steps": [
          {"step": 1, "role": "ceo", "action": "set_quarterly_priorities"},
          {"step": 2, "role": "cfo", "action": "budget_allocation", "parallel_with": "coo"},
          {"step": 3, "role": "coo", "action": "operational_planning", "parallel_with": "cto"},
          {"step": 4, "role": "cto", "action": "technology_roadmap", "parallel_with": "cmo"},
          {"step": 5, "role": "cmo", "action": "marketing_plan", "parallel_with": "chro"},
