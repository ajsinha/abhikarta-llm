          {"step": 2, "role": "strategy_analyst", "action": "analyze_feasibility"},
          {"step": 3, "role": "cfo", "action": "financial_assessment"},
          {"step": 4, "role": "coo", "action": "operational_assessment"},
          {"step": 5, "role": "cto", "action": "technology_assessment"},
          {"step": 6, "role": "ceo", "action": "executive_committee_review"},
