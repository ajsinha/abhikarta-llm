{
  "agent_id": "banking_credit_risk",
  "name": "Credit Risk Assessment Agent",
  "description": "Advanced credit risk assessment agent that evaluates creditworthiness, calculates risk scores, and provides recommendations for credit decisions.",
  "version": "1.0.0",
  "category": "banking",
  "subcategory": "risk",
  "agent_type": "react",
  "model_id": "gpt-4o",
  "system_prompt": "You are a credit risk assessment specialist agent. Your role is to evaluate the creditworthiness of individuals and businesses for lending decisions.\n\nCore Assessment Areas:\n1. Credit Score Analysis\n   - Evaluate credit bureau scores\n   - Analyze credit history length\n   - Review payment patterns\n   - Assess credit utilization\n\n2. Financial Health\n   - Debt-to-income ratio\n   - Asset evaluation\n   - Income stability\n   - Cash flow analysis\n\n3. Risk Factors\n   - Employment stability\n   - Industry risk\n   - Economic conditions\n   - Collateral quality\n\n4. Behavioral Indicators\n   - Banking relationship\n   - Account management patterns\n   - Previous default history\n\nProvide:\n- Comprehensive risk score (0-100)\n- Risk tier classification\n- Key risk factors\n- Mitigation recommendations\n- Pricing suggestions based on risk\n\nBe objective, data-driven, and transparent in your assessments.",
  "tools": [
    "calculate_credit_score",
    "assess_debt_to_income",
    "calculate_loan_eligibility",
    "calculate_percentage",
    "calculate_expression",
    "generate_reference_number"
  ],
  "max_iterations": 10,
  "temperature": 0.2,
  "input_schema": {
    "type": "object",
    "properties": {
      "applicant_type": {"type": "string", "enum": ["individual", "business"]},
      "credit_data": {
        "type": "object",
        "properties": {
          "credit_score": {"type": "number"},
          "credit_history_years": {"type": "number"},
          "payment_history": {"type": "object"},
          "credit_utilization": {"type": "number"},
          "recent_inquiries": {"type": "number"}
        }
      },
      "financial_data": {
        "type": "object",
        "properties": {
          "annual_income": {"type": "number"},
          "monthly_debts": {"type": "object"},
          "assets": {"type": "number"},
          "liabilities": {"type": "number"}
        }
      },
      "loan_request": {
        "type": "object",
        "properties": {
          "amount": {"type": "number"},
          "purpose": {"type": "string"},
          "term_months": {"type": "number"}
        }
      }
    },
    "required": ["applicant_type", "credit_data", "financial_data"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "assessment_id": {"type": "string"},
      "risk_score": {"type": "number"},
      "risk_tier": {"type": "string", "enum": ["prime", "near_prime", "subprime", "deep_subprime"]},
      "approval_recommendation": {"type": "string"},
      "max_recommended_exposure": {"type": "number"},
      "suggested_rate_premium": {"type": "number"},
      "key_risk_factors": {"type": "array"},
      "mitigating_factors": {"type": "array"},
      "conditions": {"type": "array"}
    }
  },
  "example_inputs": [
    {
      "applicant_type": "individual",
      "credit_data": {
        "credit_score": 680,
        "credit_history_years": 8,
        "payment_history": {"on_time_percentage": 94},
        "credit_utilization": 35,
        "recent_inquiries": 2
      },
      "financial_data": {
        "annual_income": 85000,
        "monthly_debts": {"mortgage": 1500, "car_loan": 400},
        "assets": 150000,
        "liabilities": 180000
      },
      "loan_request": {
        "amount": 30000,
        "purpose": "debt_consolidation",
        "term_months": 60
      }
    }
  ],
  "tags": ["credit", "risk", "assessment", "underwriting", "banking"],
  "permissions": {
    "allowed_roles": ["agent_developer", "super_admin", "domain_admin"]
  },
  "status": "published",
  "created_at": "2025-01-01T00:00:00Z",
  "author": "Abhikarta System"
}
